{
    // VSCodeVim setting
    "vim.useSystemClipboard": false,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.foldfix": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {"before": ["f"], "after": ["<Leader>", "<Leader>", "s"]},
        {"before": ["<Tab>"],"commands" : ["editor.action.indentLines"]}, 
        {"before": ["<S-Tab>"],"commands" : ["editor.action.outdentLines"]},
        {"before": ["<ESC>", "<ESC>"], "commands": [":noh"]},
        {"before": ["<C-[>", "<C-[>"], "commands": [":noh"]}
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {"before": ["<Tab>"],"commands" : ["editor.action.indentLines"]}, 
        {"before": ["<S-Tab>"],"commands" : ["editor.action.outdentLines"]}, 
    ],
    "vim.useCtrlKeys": true,
    "vim.overrideCopy": true,
    "vim.handleKeys": {
        "<C-f>": true,
        "<C-b>": true,
        "<C-u>": true,
        "<C-r>": true,
        "<C-v>": true,
        "<C-[>": true,
        "<C-w>": true,
    },
    "vim.cursorStylePerMode.normal" : "block",
    "vim.cursorStylePerMode.insert": "line-thin",
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": ["#1882B6", "#FFFFFF"],
    "vim.statusBarColors.insert": ["#984B1C", "#FFFFFF"],
    "vim.statusBarColors.visual": ["#308C48", "#FFFFFF"],
    "vim.statusBarColors.visualline": ["#308C48", "#FFFFFF"],
    "vim.statusBarColors.visualblock": ["#308C48", "#FFFFFF"],
    "vim.statusBarColors.replace": ["#E2A478", "#FFFFFF"],
    "vim.statusBarColors.commandlineinprogress": ["#818596", "#FFFFFF"],
    "vim.statusBarColors.searchinprogressmode": ["#818596", "#FFFFFF"],
    "vim.statusBarColors.easymotionmode": ["#818596", "#FFFFFF"],
    "vim.statusBarColors.easymotioninputmode": ["#818596", "#FFFFFF"],
    "vim.statusBarColors.surroundinputmode": ["#818596", "#FFFFFF"],

    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    "workbench.colorTheme": "Monokai",
    "files.autoGuessEncoding": true,
    "editor.minimap.renderCharacters": false,
    "editor.insertSpaces": false,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "boundary",
    "explorer.compactFolders": false,
   "todo-tree.tree.showScanModeButton": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terminal.external.osxExec": "iTerm.app",
    "terminal.explorerKind": "external",
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.enabled": false,
    "git.confirmSync": false,

    "workbench.colorCustomizations": {
        "statusBar.background": "#1882B6",
        "statusBar.noFolderBackground": "#1882B6",
        "statusBar.debuggingBackground": "#1882B6",
        "statusBar.foreground": "#FFFFFF"
    },
    "editor.fontFamily": "Myrica M, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 15,
    "terminal.integrated.fontSize": 15,
    "markdown.preview.fontSize": 15,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Neo Vim
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "explorer.sortOrder": "modified",
    "workbench.list.keyboardNavigation": "filter",
    "workbench.list.automaticKeyboardNavigation": false,
    "explorer.confirmDelete": false,
    "workbench.editor.enablePreview": false,
    "macros": {
        "selectAndToggleSidebar": [
            "list.select",
            "workbench.action.toggleSidebarVisibility"
        ]
    }
}